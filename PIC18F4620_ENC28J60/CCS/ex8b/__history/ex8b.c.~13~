//////////////////////////////////////////////////////////////////////////////
//
// ex8b.c - Example 8B from the Embedded Internet/Embedded Ethernet tutorial
//
// Broadcasts an Ethernet frame (with a UDP/IP payload) every second.
// Use Ethereal to view network traffic.
//
//////////////////////////////////////////////////////////////////////////////

#include "ccstcpip.h"
void IP_Init(void) {
//IP address of this unit
MY_IP_BYTE1=192;
MY_IP_BYTE2=168;
MY_IP_BYTE3=1;
MY_IP_BYTE4=7;
//network gateway
MY_GATE_BYTE1=192;
MY_GATE_BYTE2=168;
MY_GATE_BYTE3=1;
MY_GATE_BYTE4=1;
//subnet mask
MY_MASK_BYTE1=255;
MY_MASK_BYTE2=255;
MY_MASK_BYTE3=255;
MY_MASK_BYTE4=0;
}



void main(void) {
NODE_INFO node;
set_tris_b(0);
IPAddrInit();
IP_Init();
MACAddrInit();
MACInit();
init();
memset(&node.MACAddr.v[0], 0xFF, sizeof(MAC_ADDR));
node.IPAddr.v[0]=192;
node.IPAddr.v[1]=168;
node.IPAddr.v[2]=100;
node.IPAddr.v[3]=8;
   while(TRUE) {
      if (IPIsTxReady()) {
         IPPutHeader(&node, IP_PROT_UDP, sizeof(ExampleUDPPacket));
         IPPutArray(ExampleUDPPacket, sizeof(ExampleUDPPacket));
         MACFlush();
         output_toggle(USER _ LED1);
         delay_ms(1000);
}
}
}
