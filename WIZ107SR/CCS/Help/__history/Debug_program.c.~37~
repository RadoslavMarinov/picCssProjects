#include <18LF4550.h>
#fuses HSPLL, PLL2, CPUDIV1, NOMCLR, USBDIV, NOWDT, PUT, NODEBUG, VREGEN,  NOXINST, NOIESO, NOPBADEN,
#use delay(clock = 48M)
#use RS232 (baud=9600, UART1)

#DEFINE G_LED PIN_D0
#DEFINE Y_LED PIN_D1
#DEFINE R_LED PIN_C2
#DEFINE PUTime 500

#PRIORITY INT_RDA, INT_TIMER0
#BIT FSEN = getenv("SFR:UCFG").2

#INCLUDE <usb_cdc.h>

#INT_TIMER0
void tmr0()
{
   usb_task();
}

#INT_RDA
void rs23_exe()
{
static char c;
   if(kbhit())
   {
      c=getc();
      putc(c);
   }
}

void usb_enumeration();

void main()
{
delay_ms(PUTime);
//usb_init_cs();
//usb_enumeration();
//SETUP_TIMER_0(T0_DIV_1);
//ENABLE_INTERRUPTS(INT_TIMER0);
//ENABLE_INTERRUPTS(INT_RDA);
//ENABLE_INTERRUPTS(GLOBAL);
while(TRUE)
{
   output_toggle(Y_LED);
   delay_ms(500);
}
}

void usb_enumeration()
{
   output_low(G_LED);
   output_low(Y_LED);
   output_high(R_LED);
   do
   {
      delay_ms(100);
      usb_task();
   }while(!usb_enumerated());
   output_low(R_LED);
   output_high(G_LED);
}
