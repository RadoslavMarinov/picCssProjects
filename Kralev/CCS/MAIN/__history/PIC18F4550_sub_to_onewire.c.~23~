#include <18F4550.h>
#fuses HSPLL, PLL5, USBDIV, NOIESO, PUT, NOWDT, NOPBADEN, MCLR, STVREN, NODEBUG, PROTECT, VREGEN, CPUDIV1
#use delay (clock = 48M)
#define Y_LED PIN_D1
#define G_LED PIN_D0
#define R_LED PIN_C2

#include <usb_cdc.h>
enum led{yled, gled, rled};

void toggle_led(int led);

void main (void)
{
delay_ms(100);

while(1)
   {
      toggle_led(gled);   
   }


}

void toggle_led(int led)
{
switch (led)
   {
   case yled: 
      output_toggle(Y_LED); break;
   case gled:
      output_toggle(G_LED); break;
   case rled:
      output_toggle(R_LED); break;
   default: ;
   }
delay_ms(500);
}
